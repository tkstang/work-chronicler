{
  "name": "@work-chronicler/core",
  "version": "0.1.0",
  "description": "Shared types, config, and storage utilities for work-chronicler",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "yaml": "^2.4.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist"
  ]
}
